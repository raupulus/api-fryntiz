{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "webpack-env",
            "jest"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "resources/js/vue/**/*.ts",
        "resources/js/vue/*.ts",
        "resources/js/vue/*/*.vue",
        "resources/js/vue/*.vue",
        "src/**/*.tsx",
        "src/*.tsx",
        "src/**/*.vue",
        "src/*.vue",
        "tests/**/*.ts",
        "tests/*.ts",
        "tests/**/*.tsx",
        "tests/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
